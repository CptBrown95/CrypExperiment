<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#85050795"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/data_in"
        android:layout_width="290dp"
        android:layout_height="59dp"
        android:ems="10"
        android:hint="Enter INR Amount"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.132" />

    <Button
        android:id="@+id/get_xlm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XLM"
        app:backgroundTint="#020B5C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/data_in"
        app:layout_constraintVertical_bias="0.056" />

    <Button
        android:id="@+id/get_xrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XRP"
        app:backgroundTint="#020B5C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/get_xlm"
        app:layout_constraintVertical_bias="0.03" />

    <Button
        android:id="@+id/get_trx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tron"
        app:backgroundTint="#020B5C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/get_xrp"
        app:layout_constraintVertical_bias="0.031" />

    <Button
        android:id="@+id/get_zil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zillaqa"
        app:backgroundTint="#020B5C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/get_trx"
        app:layout_constraintVertical_bias="0.059" />

</androidx.constraintlayout.widget.ConstraintLayout>